page {
  background-color: #f6f6f6;
}
.top-invite {
  width: 100%;
  height: 200rpx;
  background-color: #69e4e9;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-invite .center-content {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.top-invite .center-content text {
  color: #fff;
  font-size: 30rpx;
}
.top-invite .center-content button {
  width: 200rpx;
  height: 55rpx;
  background-color: #fff;
  color: #69e4e9;
  font-size: 24rpx;
  font-weight: 700;
  margin-top: 20rpx;
  line-height: 55rpx;
}
.relevancy {
  width: 90%;
  height: 265rpx;
  margin: 0 auto;
  margin-top: 23rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.relevancy .rel-top {
  height: 100rpx;
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #f7f7f7;
}
.relevancy .rel-top .rel-top-left {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #edebf3;
}
.relevancy .rel-top .rel-top-left image {
  width: 100%;
  height: 100%;
}
.relevancy .rel-top .rel-top-right {
  height: 80rpx;
  width: 75%;
  padding-left: 25rpx;
}
.relevancy .rel-top .rel-top-right .rel-msg {
  display: flex;
}
.relevancy .rel-top .rel-top-right .rel-name {
  font-size: 35rpx;
  font-weight: 700;
}
.relevancy .rel-top .rel-top-right .rel-age {
  display: flex;
  align-items: center;
}
.relevancy .rel-top .rel-top-right .rel-age text {
  color: #666;
  font-size: 25rpx;
  padding-left: 10rpx;
}
.relevancy .rel-top .rel-top-right .rel-age image {
  width: 35rpx;
  height: 35rpx;
  padding-left: 20rpx;
}
.relevancy .rel-top .rel-top-right .rel-phone text {
  color: #c3c3c3;
  font-size: 30rpx;
}
.relevancy .rel-bottom {
  width: 100%;
  position: relative;
}
.relevancy .rel-bottom button {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 160rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  color: #bebebe;
  font-size: 27rpx;
  line-height: 60rpx;
}

