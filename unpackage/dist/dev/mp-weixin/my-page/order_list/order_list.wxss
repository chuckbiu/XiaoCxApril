page {
  background-color: #eeeeee;
}
.tab-bgc {
  background-color: #eeeeee;
}
.order-box {
  position: relative;
  width: 90%;
  height: 315rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-bottom: 40rpx;
  border-radius: 20rpx;
}
.order-box .order-top {
  width: 95%;
  height: 75rpx;
  margin: 0 auto;
  line-height: 75rpx;
  display: flex;
  justify-content: space-between;
}
.order-box .order-top .order-shoper {
  display: flex;
  align-items: center;
}
.order-box .order-top .order-shoper image {
  width: 30rpx;
  height: 30rpx;
}
.order-box .order-top .order-shoper text {
  color: #969696;
  font-size: 26rpx;
  padding-left: 10rpx;
}
.order-box .order-top .order-status text {
  color: #bb5655;
  font-size: 30rpx;
  font-weight: 700;
}
.order-box .order-center {
  width: 95%;
  height: 200rpx;
  margin: 0 auto;
  display: flex;
}
.order-box .order-center .shop-img {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
}
.order-box .order-center .shop-img image {
  width: 140rpx;
  height: 140rpx;
}
.order-box .order-center .shop-describes {
  width: 70%;
  margin-left: 30rpx;
}
.order-box .order-center .shop-describes .shop-describes-item {
  margin: 5rpx 0;
}
.order-box .order-center .shop-describes .shop-describes-item text {
  color: #a8a8a8;
  font-size: 30rpx;
}
.order-box .order-btn {
  position: absolute;
  bottom: 17rpx;
  right: 15rpx;
  width: 200rpx;
  height: 60rpx;
}
.order-box .order-btn button {
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #f98d8c;
  font-size: 26rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #f98d8c;
}

