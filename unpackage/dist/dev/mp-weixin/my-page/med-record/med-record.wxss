page {
  background-color: #f6f6f6;
}
.calendar {
  --calendar-height: 800rpx;
}
.record-box {
  width: 100%;
  margin-top: 35rpx;
  background-color: #f6f6f6;
}
.record-box .record-box-item {
  width: 88%;
  height: 135rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-left: 25rpx;
  border-radius: 25rpx;
  background-color: #fff;
}
.record-box .record-box-item .record-box-item-left {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
}
.record-box .record-box-item .record-box-item-left image {
  width: 50%;
  height: 50%;
}
.record-box .record-box-item .record-box-item-right {
  width: 80%;
  margin-left: 25rpx;
}
.record-box .record-box-item .record-box-item-right .record-box-item-right-bold {
  color: #000;
  font-size: 30rpx;
  padding: 5rpx 5rpx 0 5rpx;
}
.record-box .record-box-item .record-box-item-right .record-box-item-right-dark {
  color: #d0d0d0;
  font-size: 24rpx;
  font-weight: 700;
}
.btnrecord {
  width: 100%;
  height: 100rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
  letter-spacing: 2rpx;
  background-color: #69e4e9;
}
.add-title {
  height: 120rpx;
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 120rpx;
  background-color: #fff;
}
.add-input {
  height: 300rpx;
  width: 100%;
  margin-top: 35rpx;
}
.add-input .add-input-title {
  font-size: 40rpx;
  font-weight: 600;
  padding: 20rpx 0 20rpx 45rpx;
}
.add-input textarea {
  height: 200rpx;
  width: 90%;
  margin: 0 auto;
  padding: 10rpx;
  resize: none;
  margin-top: 20rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
}
.add-input .limit-text {
  position: absolute;
  right: 50rpx;
  bottom: 10rpx;
  color: #ccc;
  font-size: 25rpx;
}
.add-input .add-input-time {
  width: 90%;
  margin: 0 auto;
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.add-input .add-input-time .input-time-year,
.add-input .add-input-time .input-time-date {
  color: #000;
  font-size: 35rpx;
}
.confirmbtn {
  width: 85%;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 35rpx;
  border-radius: 50rpx;
}

