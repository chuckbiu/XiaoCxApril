.fix-nav {
  width: 100%;
  line-height: 40px;
  text-align: center;
  background-color: #fff;
}
.nav-title {
  color: #000;
  font-size: 34rpx;
  font-weight: 700;
  letter-spacing: 4rpx;
}
.classify {
  width: 100%;
  height: 175rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
.classify .classify-item {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.classify .classify-item image {
  width: 70rpx;
  height: 70rpx;
}
.classify .classify-item text {
  color: #5b5b5b;
  font-size: 30rpx;
  font-weight: 500;
}
.classify-box {
  width: 95%;
  height: 420rpx;
  margin: 0 auto;
  margin-top: 10rpx;
}
.classify-box .classify-tab {
  height: 140rpx;
  width: 100%;
  display: flex;
}
.classify-box .classify-tab:first-child {
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: repeating-linear-gradient(to right, #cbeffb, #edfaff);
}
.classify-box .classify-tab:nth-child(2) {
  background: repeating-linear-gradient(to right, #fdf2c4, #fdfbec);
}
.classify-box .classify-tab:last-child {
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background: repeating-linear-gradient(to right, #e1fbe2, #f3fdf4);
}
.classify-box .classify-tab .classify-tab-item {
  height: 100%;
  width: 24%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #fff;
}
.classify-box .classify-tab .classify-tab-item:first-child {
  width: 30%;
}
.classify-box .classify-tab .classify-tab-item image {
  width: 50rpx;
  height: 50rpx;
}
.classify-box .classify-tab .classify-tab-item text {
  font-size: 20rpx;
  color: #6d767b;
}
.classify-box .classify-tab .classify-tab-item .classify-tab-item-firsttext {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  padding-bottom: 5rpx;
}
.carousel {
  position: relative;
  margin-top: 30rpx;
}
.carousel .carsousel-title {
  height: 50rpx;
  width: 95%;
  margin: 0 auto;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: -27rpx;
}
.carousel .carsousel-title image {
  width: 50rpx;
  height: 50rpx;
}
.carousel .carsousel-title text {
  font-size: 33rpx;
  font-weight: 700;
  color: #000;
}
.carousel .swiper-item {
  overflow: hidden;
  height: 100%;
  width: 265px;
  border-radius: 20rpx;
  border: 2px solid #f2ede9;
  background-color: #fefefe;
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
  transition: all 0.5s ease;
  text-align: left;
  transition: all 0.5s ease-in-out;
}
.carousel .swiper-content {
  height: 100%;
}
.carousel .swiper-content .swiper-content-title {
  width: 100%;
  height: 100rpx;
}
.carousel .swiper-content .swiper-content-title text {
  color: #000;
  font-size: 35rpx;
  font-weight: 700;
  padding-left: 20rpx;
  line-height: 100rpx;
}
.carousel .swiper-content .swiper-content-con {
  height: 405rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.carousel .swiper-content .swiper-content-con .swiper-content-con-item2 {
  width: 40%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  box-shadow: 1rpx 1rpx 10rpx #e8e8e8;
}
.carousel .swiper-content .swiper-content-con .swiper-content-con-item2 .swiper-content-con-item-textBold {
  font-size: 30rpx;
  color: #000;
  font-weight: 550;
}
.carousel .swiper-content .swiper-content-con .swiper-content-con-item {
  width: 33.33%;
  height: 135rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.carousel .swiper-content .swiper-content-con .swiper-content-con-item image {
  width: 60rpx;
  height: 60rpx;
}
.carousel .swiper-content .swiper-content-con .swiper-content-con-item text {
  font-size: 30rpx;
  color: #a3a3a3;
}
