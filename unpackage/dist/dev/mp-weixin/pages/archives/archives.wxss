/* 数字样式 */
.base-item-bold {
  font-size: 40rpx;
  font-weight: 700;
}
.base-item-dark {
  font-size: 26rpx;
  color: #dbdbdb;
}
.base-item-unit {
  color: #b7b7b7;
  font-size: 26rpx;
  font-weight: 700;
}
/* 基础信息展示 */
.basic-information {
  display: flex;
  justify-content: space-around;
  height: 200rpx;
  width: 100%;
  background-color: #fff;
  text-align: center;
}
.basic-information .base-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  width: 30%;
  /* margin-top: 50rpx; */
  flex: 1;
}
.basic-information .base-item .base-item-top {
  letter-spacing: 1px;
}
/* 其他健康信息 */
.other-info {
  width: 100%;
}
.other-info .other-item {
  position: relative;
  height: 220rpx;
  width: 93%;
  margin: 0 auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
}
.other-info .other-item .other-item-title {
  width: 200rpx;
  margin-left: 15rpx;
  -webkit-transform: translateY(15rpx);
          transform: translateY(15rpx);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.other-info .other-item .other-item-title text {
  color: #353535;
  font-size: 33rpx;
  padding-left: 20rpx;
}
.other-info .other-item .other-item-title .other-item-cirle {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other-info .other-item .other-item-title image {
  width: 40rpx;
  height: 40rpx;
}
.other-info .other-item .other-timer {
  position: absolute;
  right: 22rpx;
  top: 22rpx;
  color: #bdbdbd;
  font-size: 28rpx;
  font-weight: 700;
}
.other-info .other-item .other-unit {
  width: 85%;
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-start;
  margin-left: 90rpx;
}
.other-info .other-item .other-unit .other-unit-item {
  margin-left: 45rpx;
}
.other-info .other-item .other-unit .other-unit-item:first-child {
  margin-left: 0;
}
/* 我的体检样式 */
.phy-exam {
  width: 100%;
  height: 500px;
}
.phy-exam .phy-exam-item {
  width: 95%;
  /* height: 240rpx; */
  background-color: #fff;
  margin: 0 auto;
  border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 3rpx;
}
.phy-exam .phy-exam-item .phy-exam-item-title {
  width: 95%;
  /* background-color: pink; */
  margin: 0 auto;
  margin-top: 20rpx;
}
.phy-exam .phy-exam-item .phy-exam-item-title .phy-exam-item-type {
  color: #000;
  font-size: 35rpx;
  font-weight: 700;
}
.phy-exam .phy-exam-item .phy-exam-item-title .phy-exam-item-doc {
  float: right;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.phy-exam .phy-exam-item .phy-exam-item-title .phy-exam-item-doc image {
  width: 40rpx;
  height: 40rpx;
}
.phy-exam .phy-exam-item .phy-exam-item-title .small-img {
  width: 100%;
  /* background-color: pink; */
}
.phy-exam .phy-exam-item .phy-exam-item-title .small-img image {
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx 15rpx 15rpx 0;
}
.phy-exam .phy-exam-item .phy-exam-item-title .doc-remark {
  /* height: 120rpx; */
  width: 95%;
  background-color: #f6f6f6;
  padding: 10rpx;
  margin-bottom: 20rpx;
}
.phy-exam .phy-exam-item .phy-exam-item-title .doc-remark text {
  color: #DAA520;
  font-size: 24rpx;
}
.phy-exam-item-doc,
.phy-exam-item-time text {
  color: #aeadae;
  font-size: 24rpx;
}

