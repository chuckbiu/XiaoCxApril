page {
  background-color: #fff;
}
.fix-nav {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 34rpx;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: flex-start;
}
.nav-title {
  color: #000;
  font-size: 30rpx;
  font-weight: 700;
  padding-left: 20rpx;
}
.top-img {
  width: 100%;
  height: 450rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.top-img image {
  width: 200rpx;
  height: 190rpx;
  margin-bottom: 100rpx;
}
.input-info {
  width: 100%;
  height: 300rpx;
}
.input-info .captcha-input {
  position: relative;
}
.input-info .user-info {
  width: 85%;
  margin: 0 auto;
  margin-top: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}
.input-info .user-info .info-title {
  color: #b7b7b7;
  font-size: 26rpx;
  font-weight: 700;
  padding-bottom: 15rpx;
}
.input-info .user-info .inputcss {
  padding-bottom: 10rpx;
}
.input-info .user-info .placeholdercss {
  color: #cbcbcb;
  font-size: 28rpx;
}
.input-info .user-info .captcha {
  position: absolute;
  right: 5rpx;
  bottom: 10rpx;
  width: 100rpx;
  height: 40rpx;
  background-color: #69e4e9;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input-info .user-info .captcha text {
  color: #fff;
  font-size: 20rpx;
}
.input-info .user-info .showpwd {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.input-info .user-info .showpwd image {
  width: 100%;
  height: 100%;
}
.input-info .btnbox {
  width: 85%;
  margin: 0 auto;
  margin-top: 100rpx;
}
.input-info .btnbox button {
  width: 100%;
  height: 80rpx;
  background-color: #69e4e9;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  letter-spacing: 2rpx;
}
.input-info .forget-info {
  width: 80%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
}
.input-info .forget-info text {
  color: #999999;
  font-size: 24rpx;
  font-weight: 700;
  padding-top: 30rpx;
}
.enroll-top {
  width: 100%;
  height: 380rpx;
}
.enroll-top view {
  width: 85%;
  margin: 0 auto;
  text-align: left;
}
.enroll-top view:first-child {
  padding-top: 220rpx;
}
.enroll-top view:first-child text {
  color: #000;
  font-size: 45rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}
.enroll-top view:nth-child(2) text {
  color: #a9a9a9;
  font-size: 23rpx;
}

