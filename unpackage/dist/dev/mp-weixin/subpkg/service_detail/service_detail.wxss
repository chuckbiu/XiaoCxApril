page {
  background-color: #f7f7f7;
}
.head_bg {
  position: relative;
  width: 100%;
  height: 500rpx;
}
.head_bg image {
  width: 100%;
  height: 100%;
}
.fix-nav {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: left;
  color: rgba(255, 255, 255, 0.8);
  font-size: 34rpx;
  position: fixed;
  top: 0;
  left: 0;
}
.flur-box {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  -webkit-filter: blur(10px);
          filter: blur(10px);
  -webkit-transform: translateY(-50rpx);
          transform: translateY(-50rpx);
}
.location {
  height: 355rpx;
  width: 96%;
  position: absolute;
  bottom: -60%;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  background-color: #fff;
  border-radius: 20rpx;
}
.location .location-title {
  width: 100%;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #eaeaea;
}
.location .location-title view {
  padding: 10rpx 30rpx;
}
.location .location-title .location-title-bold {
  font-size: 40rpx;
  font-weight: 600;
  color: #000;
  padding: 20rpx 15rpx 0 30rpx;
}
.location .location-title .location-title-small {
  font-size: 28rpx;
  font-weight: 550;
  color: #000;
  padding-bottom: 5rpx;
}
.location .location-title .location-title-time {
  font-size: 24rpx;
  font-weight: 550;
  color: #a49696;
  padding-top: 0;
}
.location .location-msg {
  width: 100%;
  height: 50%;
  display: flex;
  justify-content: space-between;
}
.location .location-msg view {
  padding: 5rpx 20rpx;
}
.location .location-msg .location-destination {
  padding-top: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.location .location-msg .location-duration {
  font-size: 25rpx;
  font-weight: 700;
  color: #969696;
}
.location .location-msg .location-msg-right {
  width: 50rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 25rpx;
  margin-right: 20rpx;
}
.location .location-msg .location-msg-right image {
  width: 50rpx;
  height: 50rpx;
}
.location .location-msg .location-msg-right text {
  font-size: 24rpx;
}
.service-process {
  width: 96%;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 320rpx;
  border-radius: 20rpx;
}
.service-process .process-title {
  font-size: 35rpx;
  font-weight: 700;
  color: #000;
  padding: 30rpx;
  border-bottom: 3px dashed #f7f7f7;
  margin-bottom: 20rpx;
}
.service-process .process-item {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-bottom: 10rpx;
}
.service-process .process-item .process-circle {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #24c2fe;
}
.service-process .process-item .process-circle text {
  color: #fff;
  font-size: 25rpx;
  font-weight: 700;
  line-height: 60rpx;
}
.service-process .process-item .process-content {
  width: 80%;
  padding-left: 20rpx;
  font-size: 25rpx;
}
.orderbtn {
  width: 60%;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 35rpx;
}
.orderbtn button {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #24c2fe;
}

